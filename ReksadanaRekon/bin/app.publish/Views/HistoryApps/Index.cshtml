
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="well">
    <h4 class="text-center col-sm-12"><b>History Data Aplikasi</b></h4>
    <form class="form-inline text-right" style="margin:10px 0px">
        <div class="form-group">
            <label for="Tanggal">From : </label>
            <input id="date-start" type="date" name="Tanggal" value="" class="form-control input-sm" placeholder="Dari Tanggal" />
        </div>
        <div class="form-group">
            <label for="Tanggal">To : </label>
            <input id="date-end" type="date" name="Tanggal" value="" class="form-control input-sm" placeholder="Sampai Tanggal" />
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-danger btn-sm" id="setTanggal" value="Search" data-app="" onclick="return LoadTable()" />
        </div>
    </form>
    <table id="tabelempl" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>No</th>
                <th>Tanggal Upload</th>
                <th>Tanggal Match</th>
                <th>Tanggal Transaksi</th>
                <th>SA</th>
                <th>Fund</th>
                <th>MI</th>
                <th>SA Reference</th>
                <th>Nama Investor</th>
                <th>Nominal</th>
                <th>Status</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 80%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title text-center" id="myModalLabel">View Detail</h4>
            </div>
            <div class="modal-body">
                <fieldset>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Tanggal Match</label>
                                <div class="col-lg-8">
                                    <input type="text" disabled class="form-control input-sm" id="tanggalMatch">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">User Match</label>
                                <div class="col-lg-8">
                                    <input type="text" disabled class="form-control input-sm" id="UserMatch">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Keterangan User</label>
                                <div class="col-lg-10">
                                    <textarea class="form-control" disabled rows="2" id="keteranganUser"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Tanggal Approve</label>
                                <div class="col-lg-8">
                                    <input type="text" disabled class="form-control input-sm" id="tanggalApprove">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">User Approver</label>
                                <div class="col-lg-8">
                                    <input type="text" disabled class="form-control input-sm" id="UserApprove">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-lg-2 control-label">Keterangan Approver</label>
                                <div class="col-lg-10">
                                    <textarea class="form-control" disabled rows="2" id="keteranganApprove"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <h4 class="text-center">Data Aplikasi</h4>
                <table id="tabelDetApp" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Tanggal Upload</th>
                            <th>Tanggal Transaksi</th>
                            <th>SA</th>
                            <th>Fund</th>
                            <th>MI</th>
                            <th>SA Reference</th>
                            <th>Nama Investor</th>
                            <th>Nominal</th>
                        </tr>
                    </thead>
                    <tbody class="tbodyapp"></tbody>
                </table>
                <fieldset>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-offset-6 col-lg-2 control-label">Total Dana Aplikasi</label>
                        <div class="col-lg-4">
                            <input type="text" disabled class="form-control text-right" id="totalApp">
                        </div>
                    </div>
                </fieldset>
                <hr />
                <h4 class="text-center">Data Fund</h4>
                <table id="tabelDetFund" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Tanggal Upload</th>
                            <th>Tanggal Transaksi</th>
                            <th>No Rekening</th>
                            <th>Nama Rekening</th>
                            <th>Mata Uang</th>
                            <th>Keterangan</th>
                            <th>Jumlah</th>
                            <th>Saldo</th>
                        </tr>
                    </thead>
                    <tbody class="tbodyfund"></tbody>
                </table>
                <fieldset>
                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-offset-6 col-lg-2 control-label">Total Dana Fund</label>
                        <div class="col-lg-4">
                            <input type="text" disabled class="form-control text-right" id="totalFund">
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/sweetalert/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Content/sweetalert/sweetalert.min.js"></script>
<script>
    $(document).ready(function () {
        var startDate = null;
        var endDate = null;
        $('#tabelempl').DataTable({
            "ajax": LoadIndexTgl(startDate, endDate),
            "scrollX": true
        });
    });

    function GetById(id) {
        $.ajax({
            url: "@Url.Action("GetIdApp", "HistoryApps")" + "/" + id,
            type: "GET",
            dataType: "json",
            success: function (result) {
                $.ajax({
                    url: "@Url.Action("GetIdAppDet", "HistoryApps")" + "/" + id,
                    type: "GET",
                    dataType: "json",
                    success: function (result) {
                        clearscreen();
                        $('#tanggalMatch').val(formatDate(result.CreateDate));
                        $('#keteranganUser').val(result.KeteranganInputer);
                        $('#UserMatch').val(result.Inputer.Nama);
                        if (result.Approver != null) {
                            $('#tanggalApprove').val(formatDate(result.UpdateDate));
                            $('#keteranganApprove').val(result.KeteranganApprover);
                            $('#UserApprove').val(result.Approver.Nama);
                        }
                        $("#myModalLabel").text('View Detail - ' + result.Matching.Nama + ' ' + result.Matching.Keterangan);
                    }
                })
                var totalapp = 0;
                var htmlapp = '';
                $.each(result.allDataAplikasi, function (index, val) {
                    index++;
                    htmlapp += '<tr>';
                    htmlapp += '<td>' + index + '</td>';
                    htmlapp += '<td>' + formatDate(val.DataAplikasi.CreateDate) + '</td>';
                    htmlapp += '<td>' + formatDate(val.DataAplikasi.TransactionDate) + '</td>';
                    htmlapp += '<td>' + val.DataAplikasi.SA.Nama + '</td>';
                    htmlapp += '<td>' + val.DataAplikasi.Fund.Nama + '</td>';
                    htmlapp += '<td>' + val.DataAplikasi.MI.Nama + '</td>';
                    htmlapp += '<td>' + val.DataAplikasi.SAReference + '</td>';
                    htmlapp += '<td>' + val.DataAplikasi.InvestorFundUnitName + '</td>';
                    htmlapp += '<td>' + plustitik(val.DataAplikasi.AmountNominal) + '</td>';
                    htmlapp += '</tr>';
                    totalapp = totalapp + val.DataAplikasi.AmountNominal;
                });
                $('.tbodyapp').html(htmlapp);
                $('#totalApp').val(plustitik(totalapp));

                var totalfund = 0;
                var htmlfund = '';
                $.each(result.allDataFund, function (index, val) {
                    index++;
                    htmlfund += '<tr>';
                    htmlfund += '<td>' + index + '</td>';
                    htmlfund += '<td>' + formatDate(val.DataFund.CreateDate) + '</td>';
                    htmlfund += '<td>' + formatDate(val.DataFund.Tanggal) + '</td>';
                    htmlfund += '<td>' + val.DataFund.Rekening.NoRek + '</td>';
                    htmlfund += '<td>' + val.DataFund.Rekening.NamaRek + '</td>';
                    htmlfund += '<td>' + val.DataFund.CCY + '</td>';
                    htmlfund += '<td>' + val.DataFund.Keterangan + '</td>';
                    htmlfund += '<td>' + plustitik(val.DataFund.Jumlah) + '</td>';
                    htmlfund += '<td>' + plustitik(val.DataFund.Saldo) + '</td>';
                    htmlfund += '</tr>';
                    totalfund = totalfund + val.DataFund.Jumlah;
                });
                $('.tbodyfund').html(htmlfund);
                $('#totalFund').val(plustitik(totalfund));

                $('#myModal').modal('show');
            }
        })
    }

    function LoadTable() {
        var startDate = $('#date-start').val();
        var endDate = $('#date-end').val();

        if (startDate > endDate && endDate != "") {
            alert("Tanggal mulai tidak boleh lebih besar");
        } else {
            $('#tabelempl').DataTable().destroy();
            $('#tabelempl').DataTable({
                "ajax": LoadIndexTgl(startDate, endDate),
                "scrollX": true
            });
        }
    }

    function LoadIndexTgl(startDate, endDate) {
        $.ajax({
            type: "GET",
            url: "@Url.Action("GetList", "HistoryApps")",
            async: false,
            data: { startDate: startDate, endDate: endDate },
            dataType: "JSON",
            success: function (data) {
                if (data == "") {
                    $('#tabelempl > tbody > tr').remove();
                } else {
                    var html = '';
                    var a = 1;
                    $.each(data, function (index, val) {
                        html += '<tr>';
                        html += '<td>' + a + '</td>';
                        a++;
                        html += '<td>' + formatDate(val.DataAplikasi.CreateDate) + '</td>';
                        html += '<td>' + formatDate(val.DataAplikasi.UpdateDate) + '</td>';
                        html += '<td>' + formatDate(val.DataAplikasi.TransactionDate) + '</td>';
                        html += '<td>' + val.DataAplikasi.SA.Nama + '</td>';
                        html += '<td>' + val.DataAplikasi.Fund.Nama + '</td>';
                        html += '<td>' + val.DataAplikasi.MI.Nama + '</td>';
                        html += '<td>' + val.DataAplikasi.SAReference + '</td>';
                        html += '<td>' + val.DataAplikasi.InvestorFundUnitName + '</td>';
                        html += '<td>' + plustitik(val.DataAplikasi.AmountNominal) + '</td>';
                        html += '<td><span class="label label-' + val.DataAplikasi.Matching.Warna + '">' + val.DataAplikasi.Matching.Nama + '</span></td>';
                        html += '<td><div class="btn-group-vertical"><button class="btn btn-info btn-sm" onclick="GetById(' + val.TransaksiId + ')">View</button></div></td>';
                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                }
            }
        });
    }

    function formatDate(dates) {
        date = new Date(parseInt(dates.substr(6)));
        var year = date.getFullYear();
        var month = (1 + date.getMonth()).toString();
        month = month.length > 1 ? month : '0' + month;
        var day = date.getDate().toString();
        day = day.length > 1 ? day : '0' + day;
        var hour = date.getHours().toString();
        hour = hour.length > 1 ? hour : '0' + hour;
        var min = date.getMinutes().toString();
        min = min.length > 1 ? min : '0' + min;
        var sec = date.getSeconds().toString();
        sec = sec.length > 1 ? sec : '0' + sec;
        //return day + '/' + month + '/' + year + " " + hour + ":" + min + ":" + sec;
        return day + '/' + month + '/' + year;
    }

    function plustitik(angka) {
        var rupiah = '';
        var angkarev = angka.toString().split('').reverse().join('');
        for (var i = 0; i < angkarev.length; i++) if (i % 3 == 0) rupiah += angkarev.substr(i, 3) + ',';
        return rupiah.split('', rupiah.length - 1).reverse().join('');
    }

    function clearscreen() {
        $('#tanggalMatch').val('');
        $('#keteranganUser').val('');
        $('#UserMatch').val('');
        $('#tanggalApprove').val('');
        $('#keteranganApprove').val('');
        $('#UserApprove').val('');
    }
</script>

